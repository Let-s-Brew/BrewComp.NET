@using BrewCode.AddressTools.Models
@using System.ComponentModel.DataAnnotations
@using System.Text.RegularExpressions

<MudDataGrid Items="@Data" ReadOnly=@(!CanEdit) EditMode="DataGridEditMode.Form">
    <Columns>
        <PropertyColumn Property="a=>a.Address" />
        <PropertyColumn Property="a=>a.City" />
        <PropertyColumn Property="a=>a.State"/>
        <PropertyColumn Property="a=>a.PostalCode"/>
    </Columns>

</MudDataGrid>

@code {
    [Parameter]
    public List<CivicAddress> Data { get; set; } = default!;

    [Parameter]
    public bool CanEdit { get; set; } = false;

    
}
