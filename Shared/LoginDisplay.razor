<div class="dropdown">
    <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        <img width="32" height="32" class="bi bi-person-circle" src="css/bootstrap/icons/person-circle.svg"/>
    </button>
    <ul class="dropdown-menu">
        <AuthorizeView>
            <Authorized>
                <li><h6 class="dropdown-header">Hello, @context?.User?.Identity?.Name!</h6></li>
                <li><hr class="dropdown-divider"></li>
                <li><a href="Identity/Account/Manage">Profile</a></li>
                <li><a href="Identity/Account/LogOut">Log out</a></li>
            </Authorized>
            <NotAuthorized>
                <li><a href="Identity/Account/Register">Register</a></li>
                <li><a href="Identity/Account/Login">Log in</a></li>
            </NotAuthorized>
        </AuthorizeView>
    </ul>
</div>
