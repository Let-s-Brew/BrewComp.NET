<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BrewComp.NET</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="icon-link nav-link" href="" Match="NavLinkMatch.All">
                <img width="@iconSize" height="@iconSize" src="css/bootstrap/icons/house-fill.svg" aria-hidden="true" alt="Home" /> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="icon-link nav-link" href="/Competitions">
                <img width="@iconSize" height="@iconSize" src="css/bootstrap/icons/trophy-fill.svg" aria-hidden="true" /> Competitions
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private int iconSize = 24;
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
