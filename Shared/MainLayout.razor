@inherits LayoutComponentBase

<PageTitle>BrewComp.NET</PageTitle>

<MudThemeProvider/>
<MudDialogProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => ToggleNavMenu())" />
        <MudText Typo="Typo.h5" Class="ml-3">BrewComp.Net</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_showNavMenu" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent Class="mt-md-5 mt-3 px-4">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _showNavMenu = true;

    void ToggleNavMenu()
    {
        _showNavMenu = !_showNavMenu;
    }
}